# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Api spec
GET     /swagger.json                             controllers.SwaggerController.getSwagger

GET     /io/read                                  controllers.IOController.objectRead
POST    /io/write                                 controllers.IOController.objectWrite
GET     /io/backends                              controllers.IOController.bucketBackends

POST    /authorize/read                           controllers.AuthorizeController.objectRead
POST    /authorize/write                          controllers.AuthorizeController.objectWrite
POST    /authorize/create_file                    controllers.AuthorizeController.objectCreate
POST    /authorize/create_bucket                  controllers.AuthorizeController.bucketCreate
POST    /authorize/copy_file                      controllers.AuthorizeController.objectDuplicate

PUT     /file/:id                                 controllers.FileController.fileUpdate(id: Long)
PUT     /bucket/:id                               controllers.FileController.bucketUpdate(id: Long)

# Git
GET     /repo/:id/.git/info/refs                  controllers.GitController.getRefs(id: Long)
POST    /repo/:id/.git/git-upload-pack            controllers.GitController.uploadPack(id: Long)
POST    /repo/:id/.git/git-receive-pack           controllers.GitController.receivePack(id: Long)

# LFS
POST    /repo/:id/.git/info/lfs/objects/batch     controllers.GitController.lfsBatch(id: Long)
